    "version": "0.2.0",
    "configurations": [
        {
            "name": "KiCli",
            "type": "debugpy",
            "request": "launch",
            "program": "kicli.py",
            "console": "integratedTerminal",
            "args": ["--csvFilePath", "./examples/custom.csv",
                     "--outFolderPath", "./out",
                     "--logFolderPath", "./log"]
        }
        {
            "name": "Replace",
            "type": "debugpy",
            "request": "launch",
            "program": "./project/replace.py",
            "console": "integratedTerminal",
            "args": ["./project/v8", "./project/dev"]
        }
        {
            "name": "showcase",
            "type": "debugpy",
            "request": "launch",
            "program": "./examples/showcase.py",
            "console": "integratedTerminal"
        }
    ]
}